{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

{{#post}}

<header class="main-header post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    <nav class="main-nav {{#if image}}overlay{{/if}} clearfix">
        <a class="back-button icon-arrow-left" href="{{@blog.url}}">Home</a>
        {{> "menu"}}
        <a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/">Subscribe</a>
    </nav>
</header>

<main class="content" role="main">

    <article class="{{post_class}}">
    {{! Everything inside the #post tags pulls data from the post }}

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
            <section class="post-meta">
                <time class="post-date" datetime="{{date published_at format='YYYY-MM-DD'}}">建立：{{date published_at timeago="true"}}</time> |
                <time class="updated-date" datetime="{{date updated_at format='YYYY-MM-DD'}}">最後更新：{{date published_at timeago="true"}}</time>
                {{tags prefix=" | 標籤："}}
            </section>
            <section class="social-plugins">
                <div class="fb-like" data-width="710" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
            </section>
        </header>

        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">

            <section>
                <div class='shareaholic-canvas' data-app='share_buttons' data-app-id='14001971'></div>
            </section>

            <section>
                <h4>留言區</h4>
                <div class="fb-comments social-plugins" data-href="{{url absolute="true"}}" data-width="710" data-numposts="5" data-colorscheme="light"></div>
            </section>

